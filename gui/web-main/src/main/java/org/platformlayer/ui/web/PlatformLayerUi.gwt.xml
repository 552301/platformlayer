<module rename-to="platformlayerui">
    <source path="client" />
    <source path="shared" />

    <inherits name='com.google.gwt.user.User' />
    <inherits name='com.google.gwt.editor.Editor' />
    <inherits name='com.google.gwt.logging.Logging' />
    <inherits name='com.google.web.bindery.requestfactory.RequestFactory' />
    <inherits name="com.google.common.collect.Collect" />

    <inherits name="com.google.gwt.inject.Inject" />

    <inherits name="org.platformlayer.PlatformLayerModel" />
    <inherits name="org.platformlayer.ui.shared.PlatformLayerShared" />

    <inherits name="org.platformlayer.service.aptcache.ServiceAptCache" />
    <inherits name="org.platformlayer.service.dns.ServiceDns" />
    <inherits name="org.platformlayer.service.dnsresolver.ServiceDnsResolver" />
    <inherits name="org.platformlayer.service.openldap.ServiceLdap" />

    <set-property name="gwt.logging.enabled" value="TRUE" />
    <set-property name="gwt.logging.logLevel" value="SEVERE" />
    <set-property name="gwt.logging.consoleHandler" value="ENABLED" />
    <set-property name="gwt.logging.developmentModeHandler" value="ENABLED" />
    <set-property name="gwt.logging.firebugHandler" value="ENABLED" />
    <set-property name="gwt.logging.hasWidgetsHandler" value="DISABLED" />
    <set-property name="gwt.logging.popupHandler" value="DISABLED" />
    <set-property name="gwt.logging.systemHandler" value="ENABLED" />
    <set-property name="gwt.logging.simpleRemoteHandler" value="DISABLED" />
  
  <!-- Uncomment if you are enabling server side deobfuscation of StackTraces
  <set-property name="compiler.stackMode" value="emulated" />
  <set-configuration-property name="compiler.emulatedStack.recordLineNumbers" value="true" />
  <set-configuration-property name="compiler.emulatedStack.recordFileNames" value="true" />
  -->

    <entry-point class='org.platformlayer.ui.web.client.PlatformLayerUi' />

    <set-configuration-property name="CssResource.obfuscationPrefix" value="empty" />
</module>
