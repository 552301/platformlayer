<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:pl="urn:import:org.platformlayer.gwt.client.widgets">

	<g:HTMLPanel>
		<div class="row">
			<div class="span4 offset4">
				<form class="well form-vertical">
					<h1>Log	 In</h1>

					<pl:AlertContainer ui:field="alerts" />

					<fieldset>
						<input type="text" class="input-xlarge" placeholder="Username"
							ui:field="username" />
						<input type="password" class="input-xlarge" placeholder="Password"
							ui:field="password" />

						<div>
							<a href="#">Forgot password?</a>
						</div>

						<div>
						Not yet registered?  <a href="#" ui:field="signupAnchor">Sign up</a>
						</div>

						<button ui:field="signIn" type="submit" class="btn">Sign in</button>
					</fieldset>

					<hr />

					<a href="#">Don't have an account?</a>
				</form>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>